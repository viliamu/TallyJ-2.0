      <page title="Roll Call" class="Projector" featureWhen="NamesReady" controller="Before" action="RollCall" requireElection="true" role="guest" desc="Display the names of those who are voting." isPreBallot="true"></page>
    </group>
    <group title="Tallying" longtitle="Tallying Ballots" showTitleInPage="false">
      <page title="Count Envelopes" featureWhen="Tallying" controller="Ballots" action="Reconcile" requireElection="true" role="guest" desc="Review the number of ballot envelopes received from each source." isPreBallot="true"></page>
      <page title="Enter Ballots" featureWhen="TieBreakNeeded, Tallying" showTellerSelector="true" showLocationSelector="true" controller="Ballots" action="Index" requireElection="true" role="guest" desc="Type in the names found on ballots."></page>
      <page title="Monitor Progress" featureWhen="TieBreakNeeded, Tallying, Reviewing" controller="After" action="Monitor" requireElection="true" role="guest" desc="Centrally monitor progress of tellers."></page>
    </group>
    <group title="Review and Report" longtitle="Review then share the news!" showTitleInPage="false">
      <page title="Analyze Ballots" featureWhen="Tallying, TieBreakNeeded, Reviewing, Report" controller="After" action="Analyze" requireElection="true" role="known" desc="Review results, checking for ties."></page>
      <page title="Detailed Reports" featureWhen="TieBreakNeeded, Reviewing, Report" controller="After" action="Reports" requireElection="true" role="known" desc="Generate election reports."></page>
      <page title="Display Tellers' Report" featureWhen="Reviewing, Report" class="Projector" controller="After" action="Presenter" requireElection="true" role="guest" desc="Display results of the election."></page>
      <!--<page title="Export Data" controller="Setup" action="Export" requireElection="true" role="known" desc="Download election data to a local file."></page>-->
    </group>
    <group title="general" longtitle="General pages" showTitleInPage="false">
      <page title="Welcome Page" featureWhen="OnDash" controller="Public" action="Index" showOnDashboard="true" requireElection="false" role="*" desc="Welcome page"></page>
      <page title="Choose Election" featureWhen="OnDash, General" controller="Dashboard" action="ChooseElection" requireElection="false" role="known" desc="List your elections.  Choose, save, load and delete elections."></page>
      <page title="Dashboard" featureWhen="OnDash, General" controller="Dashboard" action="Index" showOnDashboard="false" requireElection="true" role="*" desc="A listing of all the modules and pages in TallyJ"></page>
