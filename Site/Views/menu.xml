    <group title="Preparing" longtitle="Initial Setup - Preparing for the election" showTitleInPage="false">
      <page title="Configure this Election" featureWhen="NotStarted, NamesReady" controller="Setup" action="Index" requireElection="true" role="known" desc="Select type of election and other details"></page>
